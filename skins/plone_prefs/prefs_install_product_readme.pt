<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/prefs_main_template/macros/master"
      i18n:domain="plone">

<metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border',1)" />

<body>

<div metal:fill-slot="prefs_configlet_main"
     i18n:domain="plone"
     tal:define="errors python:request.get('errors', {})">

    <h1 i18n:translate="heading_product_readme">
        Description of
        <span tal:content="request/filereadme"
              tal:omit-tag=""
              i18n:name="productname">
            product name
        </span>
    </h1>

    <a href=""
       class="link-parent"
       tal:attributes="href string: $portal_url/prefs_install_products_form"
       i18n:translate="label_back_to_addremove_products">
    Back to Add/Remove Products
    </a>

    <div class="stx" tal:content="structure python:modules['StructuredText.StructuredText'].HTML(container.portal_quickinstaller.getProductFile(request['filereadme']))" />

    <a href=""
       class="link-parent"
       tal:attributes="href string: $portal_url/prefs_install_products_form"
       i18n:translate="label_back_to_addremove_products">
        Back to Add/Remove Products
    </a>

</div>

</body>
</html>
