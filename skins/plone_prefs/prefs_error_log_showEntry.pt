<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<tal:block metal:fill-slot="head_slot">
   <tal:block tal:define="dummy python:request.set('disable_border',1)" />
</tal:block>

<body>

    <div metal:fill-slot="main"
         tal:define="userid python:request.get('userid', member.getId());
                     member python:mtool.getMemberById(userid);
                     errors python:request.get('errors', {})">

        <h2 i18n:translate="heading_exceptiontrace">Exception traceback</h2>

            <div tal:define="entry python:here.error_log.getLogEntryById(request.get('id'))">

                <em tal:condition="not:entry">
                    <span i18n:translate="text_errlog_notfound"> The specified log entry was not found.  It may have expired.</span>
                </em>

                <div tal:condition="entry">

                    <dl>
                        <dt i18n:translate="label_time">Time</dt>
                        <dd tal:content="python: DateTime(entry['time'])"></dd>
    
                        <dt align="left" valign="top"
                            i18n:translate="label_user_name">User Name (User Id)</dt>
                        <dd tal:content="string: ${entry/username} (${entry/userid})">joe (joe)</dd>
    
                        <dt align="left" valign="top">Request URL</dt>
                        <dd tal:content="entry/url">http://example.com</dd>
    
                        <dt align="left" valign="top">Exception Type</dt>
                        <dd tal:content="entry/type">AttributeError</dd>
    
                        <dt align="left" valign="top">Exception Value</dt>
                        <dd tal:content="entry/value">gak</dd>
                    </dl>
                    
                    <form action="prefs_error_log_form" method="get">
                       <input class="standalone" type="submit" name="submit" value="Return to log" i18n:attributes="value"/>
                    </form>


                    <div tal:condition="entry/tb_html" tal:content="structure entry/tb_html">
                    Traceback (HTML)
                    </div>
                    <pre tal:condition="not:entry/tb_html" tal:content="entry/tb_text">
                        Traceback (text)
                    </pre>

                    <p tal:condition="entry/tb_text"><a href="" tal:attributes="href
                        string:error_log/getLogEntryAsText?id=${entry/id}">Display
                        traceback as text</a></p>

                    <div tal:condition="entry/req_html">
                        <h3>REQUEST</h3>
                        <div tal:replace="structure entry/req_html"></div>
                    </div>
                </div>
                <p>
                    <form action="prefs_error_log_form" method="get">
                       <input class="standalone" type="submit" name="submit" value=" Return to log " />
                    </form>
                </p>
            </div>
        </div>
</body>
</html>