<div class="row">

    <div class="label">
        <input class="noborder"
               type="checkbox" 
               value="" 
               name="criterion_ids:list" 
               id=""
               tal:attributes="value here/getId;
                               id string:cb_${here/getId};" 
               />
        
        <label for=""
               tal:attributes="for string:cb_${here/getId}">
            <span tal:content="here/Field">Field</span>
            is
        </label>
        
        <div id="" 
             i18n:translate=""
             class="help" 
             style="visibility:hidden"
             tal:content="here/Description"
             tal:attributes="id string:${here/getId}_help;"
             >
        Integer
        </div>

        <input type="hidden" 
               name="criteria.id:records" 
               value=""
               tal:attributes="value here/getId" 
               />
        

    </div>
    
    <div class="field">       

        <select name=""
                tal:attributes="name string:criteria.direction__${here/getId}:records;
                                onfocus string:formtooltip('${here/getId}_help',1);
                                onblur  string:formtooltip('${here/getId}_help',0);"
                >
                
            <option value="min"
                    tal:attributes="selected python:here.direction=='min'"
            >more than</option>
            
            <option value="max"
                    tal:attributes="selected python:here.direction=='max'"
            >less than</option>
             
            <option value="min:max"
                    tal:attributes="selected python:here.direction=='min:max'"
            >within</option>
        </select>


        <input type="text" 
               name="criteria.value:records" 
               value="" 
               size="20"
               tal:attributes="value here/getValueString; 
                               onfocus string:formtooltip('${here/getId}_help',1);
                               onblur  string:formtooltip('${here/getId}_help',0);"
               />
     </div>
     
</div>       
