<div class="row">

    <div class="label">
        <input class="noborder"
               type="checkbox" 
               value="" 
               name="criterion_ids:list" 
               id=""
               tal:attributes="value here/getId; id string:cb_${here/getId}" 
               />

        <label for=""
               tal:attributes="for string:cb_${here/getId}">
            <span tal:content="here/Field">Field</span>
            is
        </label>

        <div id="" 
             i18n:translate=""
             class="help" 
             style="visibility:hidden"
             tal:content="here/Description"
             tal:attributes="id string:${here/getId}_help;"
             >
        List
        </div>

        <input type="hidden" 
               name="criteria.id:records" 
               value="" 
               tal:attributes="value here/getId" />
        
    </div>
    
    <div class="field">
        
        <input type="hidden" 
               name="criteria.reversed::int:default:records" 
               value="0"
               />
        
        <input class="noborder"
               type="radio" 
               name="criteria.reversed:records" 
               value=""
               tal:attributes="checked not:here/reversed;
                               id string:${here/getId}_ascending;
                               onfocus string:formtooltip('${here/getId}_help',1);
                               onblur  string:formtooltip('${here/getId}_help',0);"
               />
               
        <label for=""
               tal:attributes="for string:${here/getId}_ascending;">
            Sorted in ascending order
        </label>
        
        <br />
        
        <input class="noborder"
               type="radio" 
               name="criteria.reversed:records" 
               value="1"
               tal:attributes="checked here/reversed;
                               id string:${here/getId}_descending;
                               onfocus string:formtooltip('${here/getId}_help',1);
                               onblur  string:formtooltip('${here/getId}_help',0);"
               />

        <label for=""
               tal:attributes="for string:${here/getId}_descending;">
            Sorted in descending order
        </label>

    </div>

</div>
        
