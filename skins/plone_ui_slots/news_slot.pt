<!-- The news box -->

<table metal:define-macro="newsBox"
       class="box"
       summary="News listing"
       cellpadding="0" cellspacing="0"
       tal:define="DateTime python:modules['DateTime'].DateTime;
                   results python:here.portal_catalog.searchResults( meta_type='News Item'
                                                                   , sort_on='Date'
                                                                   , sort_order='reverse'
                                                                  , review_state='published')[:5];"
       tal:condition="python:test(template.getId()!='recent_news' and results, 1, 0)">

    <thead>
        <tr><th>News</th><th class="empty">&nbsp;</th></tr>
    </thead>

    <tbody tal:repeat="obj results">

        <tr tal:define="oddrow repeat/obj/odd"
            tal:attributes="class python:test(oddrow, 'even', 'odd')"
            class="#">

            <td colspan="2">

                <a href="#"
                   tal:attributes="href obj/getURL">
                    <span tal:replace="python:test(obj.Title, obj.Title, obj.id)"> Extended Calendar Product </span>
                </a>

                <div class="boxDetails"
                     tal:content="python:obj.modified.strftime('%B %d, %H:%M')">July 7, 08:11</div>
            </td>

        </tr>

    </tbody>

</table>
