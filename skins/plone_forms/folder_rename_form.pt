<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US" lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main"
     tal:define="Iterator python:modules['Products.CMFPlone'].IndexIterator;
                 tabindex python:Iterator();">

    <h1 i18n:translate="heading_rename_item">Rename item</h1>

    <p i18n:translate="description_rename_item">To rename an item, enter the new name below.</p>

    <form class="group"
          name="folder_rename" 
          action="folder_rename" 
          method="post"
          tal:define="items request/ids|nothing"
          tal:condition="items">

        <span class="legend" i18n:translate="legend_rename_details">Rename Details</span>

        <div class="row" tal:repeat="item items">
          <metal:block tal:define="obj python:getattr(here, item)">
            
            <div class="label">
                <span tal:replace="string:${obj/Title} (${obj/getId})" >fav_999816073</span>
                to
            </div>

            <div class="field">
                <input type="hidden"
                       name="ids:list"
                       value="fav_999816073"
                       tal:attributes="value item">
                Short Name <input type="text"
                       name="new_ids:list"
                       value="fav_999816073"
                       size="30"
                       tabindex=""
                       tal:attributes="value item;
                                       tabindex tabindex/next;"
                       /> <br />
                Title <input type="text"
                       name="new_titles:list"
                       value="title"
                       size="30"
                       tabindex=""
                       tal:attributes="value obj/Title;
                                       tabindex tabindex/next;" />
                <br />
            </div>
	    
          </metal:block>
        </div>

        <div class="row">

            <div class="label">&nbsp;</div>
            
            <div class="field">
                <input type="hidden" name="here" value=""
                       tal:attributes="value here/absolute_url">
                <input class="context" 
                       type="submit" 
                       value="Rename"
                       tabindex=""
                       i18n:attributes="value"
                       tal:attributes="tabindex tabindex/next;" 
                       />
                <input class="context" 
                       type="submit" 
                       value="Cancel"
                       onClick="javascript:document.folder_rename.action=document.folder_rename.here.value+'/folder_contents';document.folder_rename.submit();" 
                       tabindex=""
                       i18n:attributes="value"
                       tal:attributes="tabindex tabindex/next;"                       
                       />
            </div>

        </div>

    </form>


</div>

</body>

</html>
