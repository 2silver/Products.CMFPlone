<?xml version="1.0"?>
<content xmlns:tal="http://xml.zope.org/namespaces/tal"
         xmlns:metal="http://xml.zope.org/namespaces/metal"
         xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <Title tal:content="python: test(here.Title(), here.Title(), 'Click here to edit the headline')"
         />
    <Description tal:content="python: test(here.Description(), here.Description(), 'Click here to edit the description')"
         />
    <Text tal:condition="python: test(here.CookedBody(), 1, 0)"
          tal:content="structure here/CookedBody" />
  
    <Text tal:condition="python: test(not here.CookedBody(), 1, 0)">
          <p>Click here to edit the body text</p>
    </Text>

</content>
