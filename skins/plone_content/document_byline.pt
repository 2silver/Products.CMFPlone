<div class="documentByLine"
     metal:define-macro="byline"
     i18n:domain="plone"
     tal:condition="python: site_properties.allowAnonymousViewAbout or not isAnon"
     tal:define="creator here/Creator;
                 creator_home python:mtool.getHomeUrl(creator);">

  <tal:name tal:condition="creator"
        tal:define="author python:here.getAuthorInfo(creator)"
        i18n:translate="label_author">
    By
      <a href="#"
         tal:attributes="href string:$portal_url/author/$creator"
         tal:content="author/fullname"
         tal:on-error="here/Creator"
         i18n:name="author">
        Bob Dobalina
      </a>
  </tal:name>

  &mdash;

  <img src="" alt=""
       tal:define="locked portal_object/lock_icon.gif;
                   lockable python:hasattr(here, 'wl_isLocked');"
       tal:condition="python:lockable and here.wl_isLocked()"
       tal:replace="structure python:locked.tag(title='Locked')"
       />

  <tal:modified i18n:translate="label_published_date">
    Published:
    <tal:date tal:content="here/EffectiveDate|string:Not published"
              i18n:name="date">
    August 16, 2001 at 23:35:59
    </tal:date>
  </tal:modified>


  <div tal:condition="here/Contributors"
       i18n:translate="label_additional_contributors">
    Additional contributors:
    <tal:people content="python: ', '.join(here.Contributors())"
                 i18n:name="people">
      Mary
    </tal:people>
  </div>

  <div class="state-expired"
       tal:condition="python:here.isExpired(here)">
    This document has expired.
  </div>

  <tal:rights condition="here/Rights">
    <span tal:replace="here/Rights">
      Copyleft NiceCorp Inc.
    </span>
    <br />
  </tal:rights>



</div>
