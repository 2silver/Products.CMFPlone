<ul metal:define-macro="content_tabs"
     id="contentTabs" 
     i18n:domain="plone"
     tal:define="plone_actions python:here.plonifyActions(template_id=template_id, actions=actions)">
    <tal:actions repeat="action plone_actions">
    <li tal:define="selected action/selected|nothing;"
        tal:attributes="id string:contenttab-${tab/id};
                        class python:test(selected, 'selected', 'plain')">
        <a class="" href=""
           tal:attributes="href action/url; accesskey string:accesskeys-${action/name}"
	   i18n:attributes="accesskey" >
            <span tal:omit-tag="" i18n:translate="">
                <span tal:replace="action/name">dummy</span>
            </span>
        </a>
    </li>
    </tal:actions>
    <div class="clear"></div>
</ul>

<div metal:define-macro="content_bar"
     i18n:domain="plone"
     id="contentBar">

    &nbsp;
     
    <img src=""
         tal:define="locked portal_object/lock_icon.gif;
                     lockable python:hasattr(here, 'wl_isLocked');"
                     tal:condition="python:lockable and here.wl_isLocked()"
                     tal:replace="structure python:locked.tag(title='Locked')" alt="Object locked" />

    <span class="private"
          tal:define="review_state wf_state"
          tal:condition="review_state"
          tal:content="review_state"
          tal:attributes="class review_state"
          i18n:translate="">
    private
    </span>

    <span class="expired"
          tal:condition="python:here.isExpired(here)">
    (expired)
    </span>
</div>
