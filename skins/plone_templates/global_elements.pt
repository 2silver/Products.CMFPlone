<html>
<body>



<!-- THE SKIN SWITCHER TABS DEFINITION -->
<div class="switchbar" metal:define-macro="skin_tabs">   
  <tal:comment replace="nothing">
  <a href="/">Public View</a>
  <a href="./manage_main" class="selected">Admin View</a>
  <a href="/">Intranet View</a>
  </tal:comment>
</div>



<!-- THE SEARCHBOX DEFINITION -->
<div class="searchBox" metal:define-macro="quick_search">
    <form name="searchform"
          action="search"
          tal:attributes="action string:${portal_url}/search" >
        <label for="searchGadget" ><div class="hiddenlabel">Search</div><input id="searchGadget"
               name="SearchableText"
               type="text"
               size="20"
               value=""
               alt="Search"
	       title="Search"
	       accesskey="accesskeys-search"
	       i18n:attributes="alt accesskey"
	       tal:attributes="value request/SearchableText|nothing;
                               tabindex tabindex/next" class="visibility:visible" /></label>
        <input class="context searchButton"
               type="submit"
               value="Search"
	       accesskey="accesskeys-search"
	       tal:attributes="tabindex tabindex/next"
               i18n:attributes="value accesskey" />
    </form>
</div>

<!-- THE PORTAL LOGO DEFINITION -->
<a metal:define-macro="portal_logo"
   href="/"
   tal:attributes="href portal_url"
   tal:define="logo portal/logo.jpg;
               uri logo/absolute_url" >
    <img src="logo.jpg"
         class="logo"
         alt="logo"
         tal:attributes="width logo/width;
                         height logo/height;
                         src uri" />
</a>

<!-- THE PORTAL TABS DEFINITION -->
<div metal:define-macro="portal_tabs"
     tal:omit-tag=""
     tal:define="portal_tabs actions/portal_tabs|nothing;
                 selected_tabs python:here.selectedTabs(template.getId(), here);
                 selected_portal_tab selected_tabs/portal;" >
    <ul id="portaltabs" class="portaltabs">
       <li tal:repeat="tab portal_tabs" class="portaltab">
          <a href="" class="" tal:attributes="href tab/url;
                       class python:test(selected_portal_tab==tab['id'], 'selected', 'plain');
		       id string:portaltab-${tab/id}"
		       accesskey="accesskeys-tabs" i18n:attributes="accesskey" >
          <tal:block omit-tag="" i18n:translate="">
               <span tal:replace="tab/name">Tab Name</span>
          </tal:block>
          </a>
      </li>
   </ul>
</div>

<!-- THE PERSONAL BAR DEFINITION -->
<div class="personalBar"
     metal:define-macro="personal_bar"
     tal:define="portal_url portal_url|here/portal_url;
                 user_actions user_actions|actions/user;
                 global_actions global_actions|actions/global;
                 mtool mtool|here/portal_membership;
                 display_actions python:user_actions[:-1]+global_actions+user_actions[-1:];">&nbsp;
    <a href=""
       tal:omit-tag="not: mtool/getHomeFolder"
       tal:condition="not: isAnon"
       tal:attributes="href string:${mtool/getHomeUrl}"
       accesskey="accesskeys-personalbar"
       i18n:attributes="accesskey"
       class="userName">
       <img tal:replace="structure portal/user.gif" />
       <span tal:replace="user/getUserName">
             john
       </span>
    </a>
    <span tal:condition="isAnon"
          i18n:translate="you_are_not_logged_in">
              You are not logged in
    </span>
    <a href=""
       tal:repeat="action python:display_actions"
       tal:attributes="href action/url"
       accesskey="accesskeys-personalbar"
       i18n:attributes="accesskey">
       <img tal:replace="structure portal/linkOpaque.gif" />
       <tal:actionname i18n:translate="" tal:content="action/name">dummy</tal:actionname>
    </a>
</div>

<!-- THE PATHBAR (breadcrumbs) DEFINITION -->
<div metal:define-macro="path_bar"
     class="pathBar"
     tal:define="breadcrumbs python:here.breadcrumbs(here);
                     portal_url portal_url|here/portal_url">
       <a href="#"
          tal:define="addFavorite portal_object/addFavorite.gif;"
          tal:condition="nothing"
          tal:attributes="href string:${here/absolute_url}/addtoFavorites">
            <img tal:replace="structure python:addFavorite.tag(css_class='addFavorite',
               title='Add this location to My Favorites')" />
        </a>

    <span tal:omit-tag="" i18n:translate="you_are_here">You are here:</span>
    <span tal:condition="breadcrumbs" tal:omit-tag="">
            <a i18n:translate="tabs_home" tal:attributes="href portal_url">Home</a>
            <span class="breadcrumbSeparator">&raquo;</span>
    </span>
    <span tal:condition="not: breadcrumbs" i18n:translate="tabs_home" tal:omit-tag="">
        Home
    </span>
    <span tal:repeat="crumb breadcrumbs">
        <tal:last tal:define="is_last repeat/crumb/end">
            <a href="#"
               tal:condition="python:not is_last"
               tal:attributes="href python:crumb[1]"
               tal:content="python:crumb[0]"
               i18n:translate=""
	       accesskey="accesskeys-breadcrumbs"
	       i18n:attributes="accesskey" >
                       crumb
             </a>
            <span class="breadcrumbSeparator" tal:condition="not: is_last"> &raquo; </span>
            <span tal:condition="is_last"
                  tal:content="python:crumb[0]"
                  i18n:translate="">crumb</span>
         </tal:last>
    </span>
</div>





<!-- THE STATUS MESSAGE DEFINITION -->
<div class="message"
         i18n:domain="plone"
         metal:define-macro="portal_message"
         tal:define="portal_message request/portal_status_message | nothing"
         tal:condition="portal_message">
        <img tal:replace="structure here/info.gif" />
        <strong tal:content="portal_message" i18n:translate=""></strong>
</div>



</body>
</html>

