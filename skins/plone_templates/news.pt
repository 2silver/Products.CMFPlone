<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

  <metal:block fill-slot="head_slot"
               tal:define="dummy python:request.set('disable_border', 1)"
               />
<body>
<div metal:fill-slot="main" id="content-news"
     tal:define="results python:container.portal_catalog(portal_type='News Item',sort_on='Date',sort_order='reverse',review_state='published');
                 Batch python:modules['Products.CMFPlone'].Batch;
                 b_start python:request.get('b_start',0);
                 usericon_imgtag here/user.gif;
                 portal_discussion nocall:here/portal_discussion;">


    <h1 i18n:translate="heading_news">News</h1>

    <form name="searchresults" action="" method="post" tal:condition="results"
                      tal:define="batch python:Batch(results, 15, int(b_start), orphan=1)">

        <metal:block tal:repeat="result batch"
                     tal:define="localized_time python: modules['Products.CMFPlone.PloneUtilities'].localized_time;
                                 home_url python: here.portal_membership.getHomeUrl">

            <tal:block
             tal:define="resultObject result/getObject;
                         creator result/Creator">

            <div class="portlet">

                <h6>
                    <img src="" style="border: 0"
                         tal:attributes="src result/getIcon;
                                         alt result/Type" />

                    <span tal:omit-tag="" i18n:translate="posted_by">Posted by</span>

                    <a href=""
                       tal:attributes="href python: home_url(creator)">

                        <img tal:replace="structure usericon_imgtag" />

                        <span tal:replace="creator" >
                        Author
                        </span>

                    </a>

                  - <span tal:omit-tag="" i18n:translate="last_updated">Last Updated</span>: <span tal:replace="python: localized_time(result.modified, context=here)" />

                </h6>

                <div class="portletBody">
                    <div class="portletContent"
                         tal:define="resulturl resultObject/absolute_url">

                        <h2 tal:content="result/Title">
                            Title
                        </h2>

                        <p tal:content="structure result/Description">
                            Description
                        </p>


                        <p>

                            <a href="/view" tal:attributes="href resulturl" i18n:translate="read_more">
                                Read More
                            </a>

                            <tal:discuss define="is_discussable python: portal_discussion.isDiscussionAllowedFor(resultObject);"
                                         condition="is_discussable">
                            <a href=""
                               tal:attributes="href string:${resulturl}#comments;
                                               class python: test(has_replies, 'visualCommentAlign link-comment','visualCommentAlign');"
                               tal:define="talkback python: portal_discussion.getDiscussionFor(resultObject);
                                           has_replies python: talkback.hasReplies(resultObject);">

                                <span tal:replace="python: talkback.replyCount(resultObject)" />
                                <span tal:omit-tag="" i18n:translate="link_comments">comments</span>

                            </a>
                            </tal:discuss>

                        </p>


                    </div>

                </div>

            </div>

            </tal:block>

        </metal:block>

        <div class="spacer">
            &nbsp;
        </div>

        <!-- Navigation -->
        <div metal:use-macro="here/batch_macros/macros/navigation" />

        </form>

    <p tal:condition="not: results" i18n:translate="no_new_news">
        No news has been posted.
    </p>

  </div>

</body>
</html>
