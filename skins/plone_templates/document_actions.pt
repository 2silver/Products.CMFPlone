<div metal:define-macro="document_actions"
     class="documentActions"
     tal:define="document_actions actions/document_actions|nothing"
     tal:condition="document_actions">
    
    <tal:actions define="getIconFor nocall:portal/plone_utils/getIconFor"
               repeat="daction document_actions">

        <a href="" 
           tal:attributes="href daction/url"
           tal:define="title daction/name;
                       icon python:getIconFor(daction, nothing)">
            
            <img i18n:attributes="title" title="#"
                 tal:condition="icon"
                 tal:attributes="src string:$portal_url/${icon/getId};
                                 title title;
				 alt title" />
        </a>
            
    </tal:actions>
    
</div>
