<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US" metal:define-macro="master">

<head metal:use-macro="here/header/macros/html_header">
</head>

<body tal:define="dummy python:request.set('filtered_actions', here.portal_actions.listFilteredActionsFor(here))">

    <div metal:use-macro="here/header/macros/portal_header">
    Header stuff
    </div>


    <table class="columns">
   
        <tbody>
            
            <tr>
    
                <td class="left">

                    <div metal:use-macro="here/navigation_slot/macros/CMFTopic_navigation_box">
                    Navigation box
                    </div>

                    <div metal:use-macro="here/navigation_slot/macros/navigationBox">
                    Navigation box			
		    </div>
                
                    <div tal:condition="python:test(not here.portal_membership.isAnonymousUser() or here.portal_properties.allowAnonymousViewAbout, 1, 0)">
                      <span metal:use-macro="here/about_slot/macros/aboutBox">
                      About box
                      </span>
                    </div>
            
                    <div metal:use-macro="here/related_slot/macros/relatedBox">
                    Related box
                    </div>
            
                    <div metal:use-macro="here/news_slot/macros/newsBox">
                    News box
                    </div>

                </td>
                
                
                <td class="main" 
                    tal:define="actions python:request.get('filtered_actions', here.portal_actions.listFilteredActionsFor(here));
                                show_border python:here.showEditableBorder();">

                    <metal:block metal:define-slot="super1"
                         tal:condition="show_border">
                
                        <div metal:use-macro="here/portal_tabs/macros/contentTabs">
                        Content tabs
                        </div>
                        
                        <div metal:use-macro="here/portal_bars/macros/contentBar">        
                        Content bar
                        </div>	
                
                    </metal:block>
                
                    <div class="document" tal:attributes="class python:test(show_border, 'editableDocument', 'document')">

                        <div metal:use-macro="here/header/macros/portal_message">
                        Message box
                        </div>
            
                	    <div metal:define-slot="main" tal:content="nothing">
                        Page body text 
                        </div>
            
                        <div metal:define-slot="sub">
                            <span metal:use-macro="here/portal_buttons/macros/discussionView" />
                        </div> 
                    
                    </div>   
            
                </td>
    
                <td class="right">
            
                    <div metal:use-macro="here/login_slot/macros/loginBox">
                    Login box
                    </div>
            
                    <div metal:use-macro="here/workflow_review_slot/macros/review_box">
                    Review box
                    </div>	
            
                    <div metal:use-macro="here/favorites_slot/macros/favoritesBox">
                    Favorites box
                    </div>
                
                    <div metal:use-macro="here/calendar_slot/macros/calendarBox">
                    Calendar box
                    </div>
            
                </td>
            
            </tr>
        
        </tbody>
        
    </table>

    <hr size="" class="netscape4" />

    <div class="footer" metal:use-macro="here/footer/macros/portal_footer">
    Footer
    </div>

</body>
</html>
