<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US" metal:define-macro="master">

<head metal:use-macro="here/header/macros/html_header">
</head>

<body tal:define="dummy python:request.set('filtered_actions', here.portal_actions.listFilteredActionsFor(here))">

    <div metal:use-macro="here/header/macros/portal_header">
    Header stuff
    </div>


    <table class="columns">
   
        <tbody>
            
            <tr>
    
                <td class="left">
                
                    <metal:block use-macro="here/main_left_column/macros/column">
                    Left Column of three-column Layout
                    </metal:block>

                    <metal:block use-macro="here/main_right_column/macros/column">
    	            Right column of three-column layout
                    </metal:block>

                </td>
                
                
                <td class="main" 
                    tal:define="actions python:request.get('filtered_actions', here.portal_actions.listFilteredActionsFor(here));
                                show_border python:here.showEditableBorder();">

                    <metal:block metal:define-slot="super1"
                                 tal:condition="show_border">
                
                        <div metal:use-macro="here/portal_tabs/macros/contentTabs">
                        Content tabs
                        </div>
                        
                        <div class="contentBar">        
                        &nbsp;
                        </div>	
                
                    </metal:block>
                
                    <div class="document"
		         tal:attributes="class python:test(show_border, 'editableDocument', 'document')">

                        <div metal:use-macro="here/header/macros/portal_message">
                        Message box
                        </div>
            
                	<div metal:define-slot="main" tal:content="nothing">
                        Page body text 
                        </div>
            
                        <div metal:define-slot="sub">
                        <tal metal:use-macro="here/viewThreadsAtBottom/macros/discussionView" />
                        </div> 
                    
                    </div>   
            
                </td>
    
                <td class="right">

                </td>
            
            </tr>
        
        </tbody>
        
    </table>

    <hr size="" class="netscape4" />

    <div class="footer" metal:use-macro="here/footer/macros/portal_footer">
    Footer
    </div>

</body>
</html>
