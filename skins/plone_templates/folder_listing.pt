<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

    <div metal:fill-slot="main">

        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>

        <h1 tal:content="here/title_or_id" class="documentFirstHeading">
            Title or id
        </h1>

        <a href=""
           class="link-parent"
           tal:define="parent_url python:here.navigationParent(here, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">
        Up one level
        </a>

        <div class="documentDescription" tal:content="here/Description">
            description
        </div>

        <metal:listingmacro define-macro="listing">
        <tal:foldercontents define="contentFilter contentFilter|request/contentFilter|nothing;
                            limit_display limit_display|request/limit_display|nothing;
                            more_url more_url|request/more_url|string:folder_contents;
                            folderContents folderContents|python:here.getFolderContents(contentFilter=contentFilter);
                            over_limit python: limit_display and len(folderContents) > limit_display;
                            folderContents python: (over_limit and folderContents[:limit_display]) or folderContents;">
        <tal:listing condition="folderContents"
                     define="toLocalizedTime nocall:here/toLocalizedTime;
                             types python:here.portal_types.listTypeTitles();">

            <dl>
	        <tal:entry tal:repeat="item folderContents">
                <tal:block tal:define="item_url item/getURL|item/absolute_url;
                                       item_id item/getId|item/id;
                                       item_title_or_id python: item.Title or item_id; 
                                       item_description item/Description;
                                       item_type item/portal_type;
                                       item_type_title python:types[item_type] or item_type;
                                       item_typeinfo python: here.portal_types.getTypeInfo(item_type);
                                       item_modified item/ModificationDate;
                                       item_created item/CreationDate;
                                       item_wf_state item/review_state;
                                       item_wf_state_class python:here.getStateClassName(item_wf_state);
                                       item_icon python:portal_url+'/'+ item_typeinfo.getIcon();
                                       item_creators item/Creators|item/Creator;
                                       item_creators python:test(same_type(item_creators,[]) or same_type(item_creators,()), item_creators, [item_creators]);
                                       item_start item/start/ISO|item/StartDate|nothing;
                                       item_end item/end/ISO|item/EndDate|nothing;
                                   ">

                    <dt metal:define-macro="listitem">
                    
                        <tal:to_view condition="python:item_type in ['File', 'Image']"
                                     define="url string:${item_url}/view">
                            <a href="#" tal:attributes="href url">
                                <img src="" alt=""
                                     tal:attributes="src item_icon;alt item_title_or_id" />
                                <span tal:replace="item_title_or_id" />
                            </a>
                        </tal:to_view>
                        
                        <tal:to_default condition="python:item_type not in ['File', 'Image', 'Link']">
                            <a href="#" tal:attributes="href item_url">
                                <img src="" alt=""
                                     tal:attributes="src item_icon;alt item_title_or_id" />
                                <span tal:replace="item_title_or_id" />
                            </a>
                        </tal:to_default>
                        
                        <tal:to_external condition="python:item_type == 'Link'">
                            <a href="#" tal:attributes="href item/getRemoteUrl">
                                <img src="" alt=""
                                     tal:attributes="src item_icon;alt item_title_or_id" />
                                <span tal:content="item_title_or_id" />
                            </a>
                        </tal:to_external>

                        <tal:news_date condition="python:item_type == 'News Item'">
                            <span class="discreet" tal:content="python:toLocalizedTime(item_created,long_format=1)">Monday Feb 14, 2001 12:54:27</span>
                        </tal:news_date>
                    </dt>
                    <dd class="documentByLine" style="text-align:left; text-transform:lowercase;margin-bottom:0em;">
                        <span i18n:translate="" tal:content="item_type_title"/>
                        <tal:creators tal:condition="item_creators">
                            <span i18n:translate="box_created_by">
                                Created by
                            </span>
                            <span tal:replace="python: ', '.join(item_creators)"/>,
                        </tal:creators>
                        <span i18n:translate="box_last_modified">
                          Last modified
                        </span>
                        <span tal:replace="python:toLocalizedTime(item_modified,long_format=1)">
                          August 16, 2001 at 23:35:59
                        </span>
                    </dd>
                    <dd tal:condition="python: item_type == 'Event'" 
                        class="documentByLine" style="text-align:left; text-transform:lowercase;margin-bottom:0em;">
                        <span tal:replace="string:${item/location}">Oslo</span>
                        <span tal:replace="python:toLocalizedTime(item_start,long_format=1)">from date</span> -
                        <span tal:replace="python:toLocalizedTime(item_end,long_format=1)">to date</span>
                    </dd>
                    <metal:description define-slot="description_slot">
                        <tal:comment replace="nothing"> 
                            *Place custom listing info for custom types here
                        </tal:comment>
                    </metal:description>
                    <dd>
                        <span tal:omit-tag="" tal:condition="not:item_description"> 
                            &nbsp; 
                        </span> 
                        <span tal:omit-tag="" tal:content="item_description"> 
                            description 
                        </span> 
                    </dd>
                </tal:block>
	        </tal:entry>
            </dl>
        </tal:listing>
        <metal:empty metal:define-slot="no_items_in_listing">
            <p class="discreet"
               tal:condition="not: folderContents"
               i18n:translate="description_no_items_in_folder">
                There are currently no items in this folder.
            </p>
        </metal:empty>

        </tal:foldercontents>
        </metal:listingmacro>
    </div>

</body>
</html>
