<!-- The About box -->

<table metal:define-macro="aboutBox"
       class="box"
       summary="About" cellpadding="0" cellspacing="0"
       i18n:domain="plone">

    <thead>
        <tr><th i18n:translate="box_about">About</th><th class="empty">&nbsp;</th></tr>
    </thead>

    <tbody>
        <tr class="odd">
            <td colspan="2">

            <img src="img/icons/folder.gif" alt=""
                 tal:attributes="src python:portal_url + '/' + here.getIcon(relative_to_portal=1);
                 alt here/meta_type;" 
		 />&nbsp;<span
tal:replace="python:here.getTypeInfo().Title()">Object type</span>
            </td>
        </tr>

        <tr class="even">
            <td colspan="2">

            <strong i18n:translate="box_created_by">Created&nbsp;by:</strong> <br />
            <img tal:replace="structure here/user.gif" />
            <a href="#" tal:content="here/Creator"
                        tal:attributes="href python:here.portal_membership.getHomeUrl(here.Creator())">bob</a>
            </td>
        </tr>

        <tr class="odd">
            <td colspan="2">
                <strong i18n:translate="box_last_modified">Last&nbsp;modified:</strong> <br />
                <span tal:replace="python:here.toPortalTime(here.ModificationDate())">
                August 16, 2001 at 23:35:59
                </span>
            </td>
        </tr>

        <tr class="even"
	    tal:define="review_state python:container.portal_workflow.getInfoFor(here, 'review_state', '')"
	    tal:condition="review_state">
            <td colspan="2">
                <strong>Status:</strong> <br />
                <span class="private"
                      tal:content="review_state"
                      tal:attributes="class review_state"
		                  i18n:translate="">
                </span>

                <span class="expired"
		tal:condition="python:container.isExpired(here)">
                (expired)
                </span>

            </td>
        </tr>
    </tbody>

</table>
