<metal:block metal:define-macro="column"
             tal:define="global portal_url here/portal_url">

    <div metal:use-macro="here/topic_navigator_slot/macros/CMFTopic_navigation_box">
    Topic Navigation box - only does 1 level so far
    </div>

    <div metal:use-macro="here/navigation_slot/macros/navigationBox">
    Navigation box
    </div>

    <div tal:condition="python:test(not here.portal_membership.isAnonymousUser() or here.portal_properties.allowAnonymousViewAbout, 1, 0)">
      <span metal:use-macro="here/about_slot/macros/aboutBox">
      About box
      </span>
    </div>

    <div metal:use-macro="here/related_slot/macros/relatedBox">
    Related box
    </div>

</metal:block>
