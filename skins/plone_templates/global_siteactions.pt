<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      i18n:domain="plone">

<body>
<ul metal:define-macro="site_actions"
    id="portal-siteactions"
    tal:define="site_actions actions/site_actions|nothing;
                getIconFor nocall:putils/getIconFor"
    tal:condition="site_actions">

    <tal:actions repeat="saction site_actions">
      <li tal:define="icon python:getIconFor('site_actions', saction['id'], None);
                      class_name string:actionicon-site_actions-${saction/id} visualIconReplace;
                      class_name python:test(icon, class_name, nothing);"
          tal:attributes="id string:siteaction-${saction/id};
                          class class_name"><a
           href=""
           tal:define="title saction/name"
           i18n:attributes="title"
           i18n:translate=""
           tal:content="title"
           tal:attributes="href saction/url;
                           title title;"
           >Site action</a></li>
    </tal:actions>

</ul>
</body>
</html>
