<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

        <metal:title_view define-macro="generic_title_view">
        <tal:archetypes condition="exists:here/getField">
        <h1 tal:define="kss_field_decorator_view kss_field_decorator_view | context/@@kss_field_decorator_view;
						kss_class python:kss_field_decorator_view.kss_class('title', 'view');"
            id="parent-fieldname-title"
            tal:content="object_title"
            tal:attributes="class string:documentFirstHeading$kss_class;">
          Title or id
        </h1>
        </tal:archetypes>
        <h1 tal:content="object_title" class="documentFirstHeading"
            tal:condition="python:here==portal">
            Title or id
        </h1>
        </metal:title_view>

        <metal:description_view define-macro="generic_description_view">
        <tal:archetypes condition="exists:here/getField">
        <p id="parent-fieldname-description"
           tal:define="kss_field_decorator_view kss_field_decorator_view | context/@@kss_field_decorator_view;
					   kss_class python:kss_field_decorator_view.kss_class('description', 'view');"
           tal:content="here/Description"
           tal:condition="here/Description"
           tal:attributes="class string:documentDescription$kss_class;">
            Description
        </p>
        </tal:archetypes>
        <p class="documentDescription description"
           tal:content="here/Description"
           tal:condition="python:here.Description() and here==portal">
            Description
        </p>
        </metal:description_view>

  </body>
</html>
