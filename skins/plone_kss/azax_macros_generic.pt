<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

        <metal:title_view define-macro="generic_title_view">
        <tal:archetypes condition="exists:here/getField">
        <h1 tal:define="field python:context.getField('title');
                        writable python:field.writeable(context);
                        kukitclasses string:kukit-atfieldname-title kukit-widgetstate-view;
                        kukitattrs python:test(writable, ' ' + kukitclasses, '');"
            id="archetypes-fieldname-title"
            tal:content="object_title"
            tal:attributes="class string:documentFirstHeading$kukitattrs;">
          Title or id
        </h1>
        </tal:archetypes>
        <h1 tal:content="object_title" class="documentFirstHeading"
            tal:condition="python:here==portal">
            Title or id
        </h1>
        </metal:title_view>

        <metal:description_view define-macro="generic_description_view">
        <tal:archetypes condition="exists:here/getField">
        <p id="archetypes-fieldname-description"
           tal:define="field python:context.getField('description');
                       writable python:field.writeable(context);
                       kukitclasses string:kukit-atfieldname-description kukit-widgetstate-view;
                       kukitattrs python:test(writable, ' ' + kukitclasses, '');"
           tal:content="here/Description"
           tal:condition="here/Description"
           tal:attributes="class string:documentDescription$kukitattrs;">
            Description
        </p>
        </tal:archetypes>
        <p class="documentDescription description"
           tal:content="here/Description"
           tal:condition="python:here.Description() and here==portal">
            Description
        </p>
        </metal:description_view>

  </body>
</html>
