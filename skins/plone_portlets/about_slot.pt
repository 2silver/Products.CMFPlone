<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<!-- This slot is deprecated, its functionality is now built into the page of an item. -->
      
<body>

<!-- The About box -->

<div metal:define-macro="aboutBox"
     tal:define="mtool mtool|here/portal_membership;
                 isAnon isAnon|mtool/isAnonymousUser"
     tal:condition="python:test(not site_properties.allowAnonymousViewAbout and isAnon, 0, 1)"
     tal:omit-tag="">

    <div class="portlet" id="portlet-about">

    <div class="padding">

        <h5 i18n:translate="box_about">About</h5>

        <div class="portletBody">

            <div class="portletContent odd"
                 tal:define="creator here/Creator;
                             creator_home python:mtool.getHomeUrl(creator);">

                <strong i18n:translate="box_created_by">Created by</strong> <br />
                <img tal:replace="structure here/user.gif" alt="user: " />

                <a href="#" tal:condition="creator_home"
                            tal:attributes="href creator_home"
                            tal:content="creator">bob</a>

                <span tal:condition="not: creator_home"
                      tal:content="creator">bob</span>

            </div>

            <div class="portletContent even">
                <img src=""
                          tal:attributes="src python:portal_url + '/' + here.getIcon(relative_to_portal=1);
                          alt here/meta_type;"
                 />&nbsp;<span tal:omit-tag=""
                               tal:content="python:here.getTypeInfo().Title()"
                               i18n:translate="">Object type</span>
                         <img tal:define="locked portal_object/lock_icon.gif;
                                          lockable python:hasattr(here, 'wl_isLocked');"
                              tal:condition="python:lockable and here.wl_isLocked()"
                              tal:replace="structure python:locked.tag(title='Locked')" alt="Object locked" />
            </div>

            <div class="portletContent odd">
                <strong i18n:translate="box_last_modified">Last modified</strong> <br />
                <span tal:replace="python:here.toPortalTime(here.ModificationDate())">
                August 16, 2001 at 23:35:59
                </span>
            </div>

            <div class="portletContent even"
        	     tal:define="review_state wf_state"
        	     tal:condition="review_state">

                <strong i18n:translate="label_state">State</strong> <br />

                <span class="private"
                      tal:content="review_state"
                      tal:attributes="class review_state"
                      i18n:translate="">
                private
                </span>

                <span class="expired"
        		      tal:condition="python:here.isExpired(here)">
                (expired)
                </span>

            </div>

        </div>

    </div>

</div>

</div>

</body>

</html>
