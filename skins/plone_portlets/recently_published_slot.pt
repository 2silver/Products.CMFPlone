<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- The Recently Published items box -->

<div metal:define-macro="recentlyPublishedBox"
     tal:condition="not: isAnon"
     tal:define="last_login_time python:member.getProperty('last_login_time', DateTime());
                 results python:request.get('items',
                                            here.portal_catalog.searchResults(modified=last_login_time,
                                                                              modified_usage='range:min',
                                                                              sort_on='modified',
                                                                              sort_order='reverse',
                                                                              review_state='published')[:5]);">

    <div class="box" id="portlet-recently-published">

    <div class="padding">

        <h5 i18n:translate="box_recentlypublished">Recently Published</h5>

        <div class="body">

            <tal:block tal:repeat="obj results">

                <div tal:define="oddrow repeat/obj/odd"
                     tal:attributes="class python:test(oddrow, 'content even', 'content odd')">

                    <a href=""
                       tal:attributes="href obj/getURL;
                                       title obj/Description">
                        <span tal:replace="python:test(obj.Title, obj.Title, obj.id)"> Item title </span>
                    </a>

                    <div class="boxDetails"
                         tal:content="python:here.toPortalTime(obj.Date)">July 7, 08:11</div>
                </div>

            </tal:block>

            <div class="content odd" tal:condition="not: results"
                 i18n:translate="box_recently_no_items">
            No items published since your last log-in.
            </div>

            <div class="content odd">

                <a href=""
                   class="more"
                   tal:attributes="href string:${portal_url}/recently_published"
                   i18n:translate="box_morelink"
                   >
                    More...
                </a>

            </div>

        </div>

    </div>

</div>

</div>

</body>

</html>
