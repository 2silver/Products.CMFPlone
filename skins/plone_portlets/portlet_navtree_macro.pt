<li class="navTreeItem"
    tal:repeat="item options/children">
    <tal:no-display condition="not: item/no_display">
    
    <tal:level define="level options/level|python:0">

    <div tal:define="item_type_class python: 'contenttype-' + here.plone_utils.normalizeString(item['portal_type']);
                      item_wf_state_class python: 'state-' + here.plone_utils.normalizeString(item['review_state']);"
          tal:attributes="class item_type_class;">
        <a tal:attributes="href item/absolute_url;
                           title item/Description|nothing;
                           class python:test(item.get('currentItem',0), 'navTreeCurrentItem visualIconPadding', 'visualIconPadding');"
        tal:content="item/Title|nothing">
        Item Title</a></div>
        
    <ul tal:attributes="class python:'navTree navTreeLevel'+str(level)"
        tal:define="children item/children|nothing"
        tal:condition="children"
        tal:content="structure python:here.portlet_navtree_macro(children=children, level=level+1)">
          Get subtree, if available.
    </ul>
    </tal:level>
    </tal:no-display>
</li>