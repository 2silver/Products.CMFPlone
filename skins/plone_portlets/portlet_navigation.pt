<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body>
<div metal:define-macro="portlet"
       i18n:domain="plone"
       tal:omit-tag=""
       tal:define="data python:here.plone_utils.createNavTree(here, sitemap=None);">
    <div class="portlet" id="portlet-navigation-tree">
        <h5 i18n:translate="box_navigation">Navigation</h5>
        <div class="portletBody">
            <div class="portletContent odd">
                <ul class="navTree navTreeLevel0">

                    <li class="navTreeItem"
                        tal:condition="portal_properties/navtree_properties/includeTop">

                        <div class="contenttype-plone-site">
                        <a tal:attributes="href string:$portal_url;
                                           title portal/Description;
                                           class python:test(portal == here or (portal == here.aq_parent and here.plone_utils.isDefaultPage(here)), 'navTreeCurrentItem visualIconPadding', 'visualIconPadding');"
                           i18n:translate="tabs_home">
                        Home
                        </a>
                        </div>
                    </li>

                    <li tal:replace="structure python:here.portlet_navtree_macro(children=data.get('children', []), level=1)">
                      SUBTREE
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
</body>
</html>
