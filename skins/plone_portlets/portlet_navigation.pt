<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body>
<div metal:define-macro="portlet"
       i18n:domain="plone"
       tal:omit-tag=""
       tal:define="data python:here.plone_utils.createNavTree(here, sitemap=None);">
       
<dl class="portlet" id="portlet-navigation-tree">
    <dt class="portletHeader"
        i18n:translate="box_navigation">
        <a href="#" tal:attributes="href string:$portal_url/sitemap">Navigation</a>
    </dt>
    
    <dd class="portletItemSingle">
        <ul class="portletNavigationTree portletNavigationLevel0">

	        <li class="portletNavigationTreeItem"
	            tal:condition="portal_properties/navtree_properties/includeTop">
	            <a tal:attributes="href string:$portal_url;
		                           title portal/Description;
		                           style string:background-image: url($portal_url/site_icon.gif);
		                           class python:test(portal == here or (portal == here.aq_parent and here.plone_utils.isDefaultPage(here)), 'currentNavItem', '');">
                    <span tal:omit-tag=""
                          i18n:translate="tabs_home">Home</span>
	            </a>
            </li>

        	<li tal:replace="structure python:here.portlet_navtree_macro(children=data.get('children', []), level=1)">
	        SUBTREE
            </li>
        </ul>
    </dd>
</dl>

</div>
</body>
</html>
