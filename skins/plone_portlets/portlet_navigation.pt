<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body>
<div metal:define-macro="portlet"
       i18n:domain="plone"
       tal:omit-tag=""
       tal:define="data python:here.plone_utils.createNavTree(context, sitemap=None);">
    <div class="portlet" id="portlet-navigation-tree">
    <div>
        <h5 i18n:translate="box_navigation">Navigation</h5>
        <div class="portletBody">
            <div class="portletContent odd">
			     <ul class="portletNavigationTree portletNavigationLevel0">
			
			        <li class="portletNavigationTreeItem">
			    <a tal:attributes="href string:/; 
			                       style string:background-image: url()">
			    Portal Root
			    </a>
			        </li>
			        
			        <li tal:replace="structure python:here.portlet_navtree_macro(children=data.get('children', []), level=1)">
			        SUBTREE
			        </li>
				 </ul>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>
