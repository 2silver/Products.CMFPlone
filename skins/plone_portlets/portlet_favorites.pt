<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- The Favorites Box -->

<div metal:define-macro="portlet"
     tal:omit-tag=""
     tal:define="folder python:getattr(here.portal_membership.getHomeFolder(), 'Favorites', None);"
     tal:condition="python: folder is not None">

    <div class="portlet"
         tal:define="favorites python:folder.getFolderContents({'portal_type': 'Favorite'});
                     limit python:10;
                     over_limit python:len(favorites)>limit;
                     favorites python: favorites[:limit]" id="portlet-favorites">

        <h5 i18n:translate="box_my_favorites">My Favorites</h5>

        <div class="portletBody">

            <div class="portletContent odd" tal:condition="favorites">

                <tal:notag tal:repeat="o favorites">
                    <a class="marker"
                       href=""
                       tal:attributes="href o/getRemoteUrl"
                       tal:content="python:o.Title or o.getId">Favorite title</a>
                    <br />
                </tal:notag>

            </div>
            

            <div class="portletContent odd">
                <a href=""
                   class="portletMore"
                   tal:attributes="href string:${folder/absolute_url}/folder_contents"
                   i18n:translate="box_morelink"
                   >
                    More...
                </a>
            </div>

        </div>

    </div>

</div>

</body>

</html>
