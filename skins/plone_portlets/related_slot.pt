<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>

<!-- This portlet has been deprecated.  All defined macros are now 'portlet'.  The new portlet is now portlet_related. -->

<div metal:define-macro="relatedBox"
     tal:define="localContent here/navigationLocalRelated;
                 remoteContent here/navigationRemoteResources;"
     tal:condition="localContent | remoteContent" >
    <div class="portlet">
    <div class="padding">
        <h5 i18n:translate="box_related">Related</h5>
        <div class="portletBody">
            <div class="portletContent odd" tal:condition="localContent">
                <strong i18n:translate="box_local_resources">Local resources</strong>
                <br />
                <div tal:repeat="related localContent">
                    <a href=""
                       tal:attributes="href string:${related/url}/view">
                       <img src="" alt=""
                            tal:attributes="src string:$portal_url/${related/icon};alt here/title" />
                       &nbsp;<span tal:replace="related/title">Object related by keyword</span>
                    </a>
                </div>
            </div>
            <div class="portletContent even" tal:condition="remoteContent">
                <strong i18n:translate="box_external_links">External links</strong>
                <div tal:repeat="o remoteContent">
                    <a href=""
                       tal:attributes="href python:o[1]">
                       <img src="link_icon.gif" alt=""
                            tal:attributes="alt python:o[0]" />
                       &nbsp;<span tal:replace="python:o[0]">Link object in same folder</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>
