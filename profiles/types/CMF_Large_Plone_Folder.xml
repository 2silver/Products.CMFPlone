<?xml version="1.0"?>
<type-info id="CMF Large Plone Folder"
           kind="Factory-based Type Information">
  <property name="title"></property>
  <property name="description">Plone folders can define custom 'view' actions, or will behave like directory listings without one defined.</property>
  <property name="content_icon">folder_icon.gif</property>
  <property name="content_meta_type">Large Plone Folder</property>
  <property name="product">CMFPlone</property>
  <property name="factory">addLargePloneFolder</property>
  <property name="immediate_view"></property>
  <property name="global_allow">False</property>
  <property name="filter_content_types">0</property>
  <property name="allowed_content_types"></property>
  <property name="allow_discussion">False</property>
  <aliases>
   <alias from="view" to="(Default)"/>
  </aliases>
  <action action_id="view" title="View" condition_expr=""
          url_expr="string:${folder_url}/" category="folder"
          visible="True">
   <permission>View</permission>
  </action>
  <action action_id="local_roles" title="Sharing"
          condition_expr=""
          url_expr="string:${folder_url}/folder_localrole_form"
          category="folder" visible="True">
   <permission>Manage properties</permission>
  </action>
  <action action_id="edit" title="Edit" condition_expr=""
          url_expr="string:${folder_url}/folder_edit_form"
          category="folder" visible="True">
   <permission>Modify portal content</permission>
  </action>
  <action action_id="folderlisting" title="Folder Listing"
          condition_expr=""
          url_expr="string:${folder_url}/folder_listing"
          category="folder" visible="False">
   <permission>View</permission>
  </action>
  <action action_id="content_status_history" title="State"
          condition_expr="python:object and portal.portal_workflow.getTransitionsFor(object, object.getParentNode())"
          url_expr="string:$object_url/content_status_history"
          category="object_tabs" visible="False">
   <permission>View</permission>
  </action>
  <action action_id="local_roles" title="Sharing"
          condition_expr=""
          url_expr="string:${object_url}/folder_localrole_form"
          category="object" visible="True">
   <permission>Manage properties</permission>
  </action>
  <action action_id="external_edit" title="External Edit"
          condition_expr=""
          url_expr="string:$object_url/external_edit"
          category="object" visible="False">
   <permission>Modify portal content</permission>
  </action>
</type-info>
