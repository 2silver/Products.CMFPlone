<?xml version="1.0"?>
<type-info id="Document"
           kind="Factory-based Type Information with dynamic views">
  <property name="title">Page</property>
  <property name="description">A page in the portal, which can contain rich text.</property>
  <property name="content_icon">document_icon.gif</property>
  <property name="content_meta_type">ATDocument</property>
  <property name="product">ATContentTypes</property>
  <property name="factory">addATDocument</property>
  <property name="immediate_view">document_view</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types"></property>
  <property name="allow_discussion">False</property>
  <property name="default_view">document_view</property>
  <property name="view_methods">
   <element value="document_view" /></property>
  <aliases>
   <alias from="sharing" to="folder_localrole_form"/>
   <alias from="(Default)" to="(dynamic view)"/>
   <alias from="edit" to="atct_edit"/>
   <alias from="index.html" to="(dynamic view)"/>
   <alias from="properties" to="base_metadata"/>
   <alias from="view" to="(selected layout)"/>
  </aliases>
  <action action_id="view" title="View" condition_expr=""
          url_expr="string:${object_url}" category="object"
          visible="True">
   <permission>View</permission>
  </action>
  <action action_id="edit" title="Edit" condition_expr=""
          url_expr="string:${object_url}/edit"
          category="object" visible="True">
   <permission>Modify portal content</permission>
  </action>
  <action action_id="metadata" title="Properties"
          condition_expr=""
          url_expr="string:${object_url}/properties"
          category="object" visible="True">
   <permission>Modify portal content</permission>
  </action>
  <action action_id="references" title="References"
          condition_expr="object/archetype_tool/has_graphviz"
          url_expr="string:${object_url}/reference_graph"
          category="object" visible="True">
   <permission>Modify portal content</permission>
   <permission>Review portal content</permission>
  </action>
  <action action_id="history" title="History"
          condition_expr=""
          url_expr="string:${object_url}/atct_history"
          category="object" visible="False">
   <permission>ATContentTypes: View history</permission>
  </action>
  <action action_id="external_edit" title="External Edit"
          condition_expr="object/externalEditorEnabled"
          url_expr="string:${object_url}/external_edit"
          category="object" visible="False">
   <permission>Modify portal content</permission>
  </action>
  <action action_id="local_roles" title="Sharing"
          condition_expr=""
          url_expr="string:${object_url}/sharing"
          category="object" visible="True">
   <permission>Manage properties</permission>
  </action>
  <action action_id="content_status_history" title="State"
          condition_expr="python:object and portal.portal_workflow.getTransitionsFor(object, object.getParentNode())"
          url_expr="string:$object_url/content_status_history"
          category="object_tabs" visible="False">
   <permission>View</permission>
  </action>
  <action action_id="external_edit" title="External Edit"
          condition_expr=""
          url_expr="string:$object_url/external_edit"
          category="object" visible="False">
   <permission>Modify portal content</permission>
  </action>
</type-info>
