<html>
 <body>
  <div tal:define="calendar python:here.ext_calendar(2001, 10);
                    DateTime python:modules['DateTime'].DateTime;">
    <strong tal:content="calendar/month">Dec</strong>
    <table tal:define="day_names calendar/dayname_sequence; weeks_by_days calendar/weeks_by_days;
                       today python:DateTime().strftime('%d');">
      <tr>
        <td tal:repeat="day day_names"> <span
    tal:replace="day" /> </td>
      </tr>
      <tr tal:repeat="week weeks_by_days">
        <td tal:repeat="day week">
          <span tal:condition="day">
            <span tal:define="isToday python:test( (int(day)==int(today)), 1, 0)">
              <strong tal:condition="isToday"
                      tal:content="day">12</strong>
              <span tal:condition="python:test(isToday, 0, 1)"
                    tal:replace="day">12</span>
            </span>
          </span>
        </td>
      </tr>
    </table>
  </div>
 </body>
</html>
